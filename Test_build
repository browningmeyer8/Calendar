    <div id="event-list">
        <h3>Draggable Events</h3>
        <div id="event1" class="event" draggable="true">Team Meeting</div>
        <div id="event2" class="event" draggable="true">Project Deadline</div>
        <div id="event3" class="event" draggable="true">Client Call</div>
    </div>

    <div id="calendar-container">
        <div id="calendar-header">
            <button id="prev">&lt; Prev</button>
            <div id="month-year"></div>
            <button id="next">Next &gt;</button>
        </div>
        <div id="calendar-grid">
            <div class="day-name">Sun</div>
            <div class="day-name">Mon</div>
            <div class="day-name">Tue</div>
            <div class="day-name">Wed</div>
            <div class="day-name">Thu</div>
            <div class="day-name">Fri</div>
            <div class="day-name">Sat</div>
            <div id="calendar-body"></div>
        </div>
    </div>
